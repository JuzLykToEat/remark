<div class="movies">
  <h1 class="main-title">Movies</h1>

  <%= form_tag('/movies_by_actor', :method => "get") do |f| %>
    <%= label_tag(:actor_name, "Actor name:") %>
    <%= text_field_tag(:actor_name) %>
    <%= submit_tag("Search") %>
  <% end %>

  <% @movies.each do |movie| %>
    <div class="movie" style="outline: solid 2px;">
      <div class="movie-details">
        <h3>Name: <%= movie.name %></h3>
        <h3>Description: <%= movie.description %></h3>
        <h3>Year: <%= movie.year %></h3>
        <h3>Director: <%= movie.director %></h3>
      </div>

      <div class="reviews">
        <h2 class="main-title">Reviews</h2>
        <% if movie.reviews.empty? %>
          <h3 class="no_post_text text-center"><i>There's no reivew for this movie.</i></h3>
        <% else %>
          <% movie.reviews.each do |review| %>
            <h3>User: <%= review.user %></h3>
            <h3>Stars: <%= review.stars %></h3>
            <h3>Review: <%= review.review %></h3>
          <% end %>
        <% end %>
      </div>

      <div class="actors">
        <h2 class="main-title">Actors & Filming locations</h2>
        <% if movie.actors.empty? %>
          <h3 class="no_post_text text-center"><i>There's no filming location for this movie.</i></h3>
        <% else %>
          <% movie.actors.each do |actor| %>
            <h3>Actor: <%= actor.name %></h3>
            <h3>City: <%= actor.filming_location %></h3>
            <h3>Country: <%= actor.country %></h3>
          <% end %>
        <% end %>
      <div>
    </div>
  <% end %>
</div>
